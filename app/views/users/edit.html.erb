<h1>Edit User</h1>

<%= form_for @user do |f| %>
	<p>
		<%= f.label "Your handle:" %>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.submit 'Edit User' %>
	</p>
<% end %>
